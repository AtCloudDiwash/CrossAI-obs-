{
  "manifest_version": 3,
  "name": "CrossAI",
  "version": "1.0.0",
  "description": "Cross exchange of context between AI platforms",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["*://chatgpt.com/*", "*://claude.ai/*", "*://google.gemini.com/*"],
  "action": {
    "default_title": "CrossAI",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "assets/crossai.png",
    "32": "assets/crossai.png",
    "48": "assets/crossai.png",
    "128": "assets/crossai.png"
  },
"content_scripts": [
  {
    "js": ["content.obf.js"],
    "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*", "https://claude.ai/*", "https://gemini.google.com/*"],
    "run_at": "document_idle"
  }
],
"web_accessible_resources": [
    {
      "resources": ["assets/*.svg", "assets/*.png"],
      "matches": ["<all_urls>"]
    }
  ]

}
